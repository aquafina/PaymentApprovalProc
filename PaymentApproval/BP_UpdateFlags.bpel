<process name="BP_UpdateFlags"
               targetNamespace="http://xmlns.oracle.com/PaymentApprovalProcess/PaymentApproval/BP_UpdateFlags"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://xmlns.oracle.com/PaymentApprovalProcess/PaymentApproval/BP_UpdateFlags"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/PaymentApprovalProcess/PaymentApproval/UpdateFlags"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable">

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="the_client_update_flag_bpfel" partnerLinkType="client:BP_UpdateFlags" myRole="BP_UpdateFlagsProvider"/>
    <partnerLink name="UpdateFlags" partnerLinkType="ns1:UpdateFlags_plt"
                 partnerRole="UpdateFlags_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:BP_UpdateFlagsRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:BP_UpdateFlagsResponseMessage"/>
    <variable name="Invoke_UpdateFlags_merge_InputVariable"
              messageType="ns1:ApChecksAllCollection_msg"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in BP_UpdateFlags.wsdl) -->
    <receive name="receiveInput" partnerLink="the_client_update_flag_bpfel" portType="client:BP_UpdateFlags" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="Transform1">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('xsl/Transformation_1.xsl', $inputVariable.payload)"/>
        <to variable="Invoke_UpdateFlags_merge_InputVariable"
            part="ApChecksAllCollection"/>
      </copy>
    </assign>
    <invoke name="Invoke_UpdateFlags"
            inputVariable="Invoke_UpdateFlags_merge_InputVariable"
            partnerLink="UpdateFlags" portType="ns1:UpdateFlags_ptt"
            operation="merge" bpelx:invokeAsDetail="no"/>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="the_client_update_flag_bpfel" portType="client:BP_UpdateFlags" operation="process" variable="outputVariable"/>
  </sequence>
</process>